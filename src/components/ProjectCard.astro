---
export interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  projectUrl?: string;
  slug: string;
  featured?: boolean;
}

const { title, description, image, tags, projectUrl, slug, featured = false } = Astro.props;
---

<div class={`group relative bg-white rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-200 ${featured ? 'md:col-span-2' : ''}`}>
  <!-- Image -->
  <div class="aspect-video overflow-hidden bg-gray-100">
    <img 
      src={image.startsWith('http') ? image : `${import.meta.env.BASE_URL}${image.replace(/^\//, '')}`}
      alt={title}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      loading="lazy"
    />
  </div>
  
  <!-- Content -->
  <div class="p-6">
    <!-- Tags -->
    <div class="flex flex-wrap gap-2 mb-3">
      {tags.map(tag => (
        <span class="px-3 py-1 bg-blue-100 text-blue-700 text-sm font-medium rounded-full">
          {tag}
        </span>
      ))}
    </div>
    
    <!-- Title -->
    <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
      {title}
    </h3>
    
    <!-- Description -->
    <p class="text-gray-600 mb-4 line-clamp-3">
      {description}
    </p>
    
    <!-- Actions -->
    <div class="flex items-center justify-between">
      <a 
        href={`${import.meta.env.BASE_URL}projects/${slug}`}
        class="inline-flex items-center text-blue-700 hover:text-blue-800 font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded"
      >
        View Details
        <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
      
      {projectUrl && (
        <a 
          href={projectUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-4 py-2 bg-blue-700 hover:bg-blue-800 text-white font-medium rounded-lg shadow-sm hover:shadow-md transform hover:-translate-y-0.5 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
          Live Demo
        </a>
      )}
    </div>
  </div>
  
  {featured && (
    <div class="absolute top-4 right-4">
      <span class="bg-yellow-400 text-yellow-900 px-3 py-1 rounded-full text-sm font-medium">
        Featured
      </span>
    </div>
  )}
</div>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
