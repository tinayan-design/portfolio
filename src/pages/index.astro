            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">User Research</h3>
          <p class="text-gray-600">Understanding user needs through interviews, surveys, and usability testing</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">UI Design</h3>
          <p class="text-gray-600">Creating beautiful, accessible interfaces with modern design systems</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Prototyping</h3>
          <p class="text-gray-600">Rapid prototyping and testing to validate design decisions</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Projects Section -->
  <section id="projects" class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Featured Projects</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          A selection of my recent work showcasing different aspects of UI/UX design
        </p>
      </div>
      
      {featuredProjects.length > 0 && (
        <div class="grid md:grid-cols-2 gap-8 mb-16">
          {featuredProjects.map(project => (
            <ProjectCard
              title={project.data.title}
              description={project.data.description}
              image={project.data.image}
              tags={project.data.tags}
              projectUrl={project.data.projectUrl}
              slug={project.slug}
              featured={project.data.featured}
            />
          ))}
        </div>
      )}
      
      {otherProjects.length > 0 && (
        <>
          <h3 class="text-2xl font-bold text-gray-900 mb-8">More Projects</h3>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {otherProjects.map(project => (
              <ProjectCard
                title={project.data.title}
                description={project.data.description}
                image={project.data.image}
                tags={project.data.tags}
                projectUrl={project.data.projectUrl}
                slug={project.slug}
                featured={false}
              />
            ))}
          </div>
        </>
      )}
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
