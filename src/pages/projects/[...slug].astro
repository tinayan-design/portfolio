---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: project,
  }));
}

const project = Astro.props;
const { Content } = await project.render();
---

<Layout title={`${project.data.title} - Your Name`} description={project.data.description}>
  <Header />
  
  <main class="pt-24">
    <!-- Hero Section -->
    <section class="py-12 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8">
          <!-- Breadcrumb -->
          <nav class="text-sm text-gray-600 mb-4">
            <a href={import.meta.env.BASE_URL} class="hover:text-blue-600 transition-colors">Home</a>
            <span class="mx-2">/</span>
            <a href={`${import.meta.env.BASE_URL}#projects`} class="hover:text-blue-600 transition-colors">Projects</a>
            <span class="mx-2">/</span>
            <span class="text-gray-900">{project.data.title}</span>
          </nav>
          
          <!-- Title -->
          <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            {project.data.title}
          </h1>
          
          <!-- Description -->
          <p class="text-lg text-gray-600 mb-6 max-w-2xl mx-auto">
            {project.data.description}
          </p>
          
          <!-- Tags -->
          <div class="flex flex-wrap gap-2 justify-center mb-6">
            {project.data.tags.map(tag => (
              <span class="px-3 py-1 bg-blue-100 text-blue-700 text-sm font-medium rounded-full">
                {tag}
              </span>
            ))}
          </div>
          
          <!-- Actions -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            {project.data.projectUrl && (
              <a 
                href={project.data.projectUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                View Live Project
              </a>
            )}
            {project.data.githubUrl && (
              <a 
                href={project.data.githubUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-6 py-3 border-2 border-gray-300 text-gray-700 hover:border-gray-400 hover:text-gray-900 font-semibold rounded-lg transition-colors"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                View Code
              </a>
            )}
          </div>
        </div>
        
        <!-- Hero Image -->
        <div class="aspect-video rounded-xl overflow-hidden shadow-xl bg-gray-100">
          <img 
            src={project.data.image.startsWith('http') ? project.data.image : `${import.meta.env.BASE_URL}${project.data.image.replace(/^\//, '')}`}
            alt={project.data.title}
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </section>
    
    <!-- Content Section -->
    <section class="py-12">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="markdown-content max-w-none" id="markdown-content">
          <Content />
        </div>
      </div>
    </section>
    
    <!-- Back to Projects -->
    <section class="py-8 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <a 
            href={`${import.meta.env.BASE_URL}#projects`}
            class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Projects
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .markdown-content {
    color: #374151;
    font-family: 'Lato', system-ui, sans-serif;
    line-height: 1.7;
  }
  
  .markdown-content h1 {
    font-size: 36px;
    font-weight: 700;
    color: #111827;
    margin: 48px 0 24px 0;
    line-height: 1.2;
    border-bottom: 2px solid #e5e7eb;
    padding-bottom: 12px;
  }
  
  .markdown-content h2 {
    font-size: 30px;
    font-weight: 600;
    color: #111827;
    margin: 40px 0 20px 0;
    line-height: 1.3;
  }
  
  .markdown-content h3 {
    font-size: 24px;
    font-weight: 600;
    color: #111827;
    margin: 32px 0 16px 0;
    line-height: 1.4;
  }
  
  .markdown-content h4 {
    font-size: 20px;
    font-weight: 600;
    color: #111827;
    margin: 24px 0 12px 0;
    line-height: 1.4;
  }
  
  .markdown-content h5 {
    font-size: 18px;
    font-weight: 600;
    color: #111827;
    margin: 20px 0 10px 0;
    line-height: 1.4;
  }
  
  .markdown-content h6 {
    font-size: 16px;
    font-weight: 600;
    color: #111827;
    margin: 16px 0 8px 0;
    line-height: 1.4;
  }
  
  .markdown-content p {
    margin: 16px 0;
    line-height: 1.75;
    color: #374151;
  }
  
  .markdown-content ul, .markdown-content ol {
    margin: 16px 0;
    padding-left: 24px;
  }
  
  .markdown-content li {
    margin: 8px 0;
    line-height: 1.6;
  }
  
  .markdown-content strong {
    color: #111827;
    font-weight: 600;
  }
  
  .markdown-content em {
    font-style: italic;
    color: #6b7280;
  }
  
  .markdown-content img {
    margin: 24px 0;
    border-radius: 8px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }
  
  .markdown-content blockquote {
    border-left: 4px solid #3b82f6;
    padding-left: 16px;
    margin: 24px 0;
    font-style: italic;
    color: #6b7280;
  }
</style>

<script define:vars={{ baseUrl: import.meta.env.BASE_URL }}>
  // Fix image paths in markdown content to work with base URL
  document.addEventListener('DOMContentLoaded', function() {
    const markdownContent = document.getElementById('markdown-content');
    if (markdownContent) {
      // Fix images
      const images = markdownContent.querySelectorAll('img');
      images.forEach(img => {
        const originalSrc = img.getAttribute('src');
        if (originalSrc && originalSrc.startsWith('/images/')) {
          const newSrc = baseUrl + originalSrc.substring(1);
          img.src = newSrc;
        }
      });
      
      // Force heading styles with JavaScript
      const h1s = markdownContent.querySelectorAll('h1');
      h1s.forEach(h1 => {
        h1.style.fontSize = '36px';
        h1.style.fontWeight = '700';
        h1.style.color = '#111827';
        h1.style.margin = '48px 0 24px 0';
        h1.style.lineHeight = '1.2';
        h1.style.borderBottom = '2px solid #e5e7eb';
        h1.style.paddingBottom = '12px';
        h1.style.fontFamily = 'Lato, system-ui, sans-serif';
      });
      
      const h2s = markdownContent.querySelectorAll('h2');
      h2s.forEach(h2 => {
        h2.style.fontSize = '30px';
        h2.style.fontWeight = '600';
        h2.style.color = '#111827';
        h2.style.margin = '40px 0 20px 0';
        h2.style.lineHeight = '1.3';
        h2.style.fontFamily = 'Lato, system-ui, sans-serif';
      });
      
      const h3s = markdownContent.querySelectorAll('h3');
      h3s.forEach(h3 => {
        h3.style.fontSize = '24px';
        h3.style.fontWeight = '600';
        h3.style.color = '#111827';
        h3.style.margin = '32px 0 16px 0';
        h3.style.lineHeight = '1.4';
        h3.style.fontFamily = 'Lato, system-ui, sans-serif';
      });
      
      const h4s = markdownContent.querySelectorAll('h4');
      h4s.forEach(h4 => {
        h4.style.fontSize = '20px';
        h4.style.fontWeight = '600';
        h4.style.color = '#111827';
        h4.style.margin = '24px 0 12px 0';
        h4.style.lineHeight = '1.4';
        h4.style.fontFamily = 'Lato, system-ui, sans-serif';
      });
      
      const h5s = markdownContent.querySelectorAll('h5');
      h5s.forEach(h5 => {
        h5.style.fontSize = '18px';
        h5.style.fontWeight = '600';
        h5.style.color = '#111827';
        h5.style.margin = '20px 0 10px 0';
        h5.style.lineHeight = '1.4';
        h5.style.fontFamily = 'Lato, system-ui, sans-serif';
      });
      
      const h6s = markdownContent.querySelectorAll('h6');
      h6s.forEach(h6 => {
        h6.style.fontSize = '16px';
        h6.style.fontWeight = '600';
        h6.style.color = '#111827';
        h6.style.margin = '16px 0 8px 0';
        h6.style.lineHeight = '1.4';
        h6.style.fontFamily = 'Lato, system-ui, sans-serif';
      });
    }
  });
</script>
